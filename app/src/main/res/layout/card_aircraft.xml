<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlanco"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    style="@style/Base.CardView">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_vertical"
        android:layout_marginBottom="@dimen/margin_vertical"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/sub_titulo"
                android:id="@+id/tail"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/resaltar3"
                    android:id="@+id/component_medium"
                    android:background="@drawable/rounded_corner_medium"
                    android:layout_marginRight="@dimen/margin_rigth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/resaltar5"
                    android:id="@+id/component_alert"
                    android:background="@drawable/rounded_corner_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/sub_sub_titulo"
                android:text="@string/brand"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/brand"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/sub_sub_titulo"
                android:text="@string/model"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/model"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>