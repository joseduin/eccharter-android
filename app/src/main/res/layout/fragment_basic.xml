<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorNube"
    android:paddingLeft="@dimen/margin_top_init"
    android:paddingRight="@dimen/margin_top_init"
    tools:context="flight.report.ec.charter.fragment.Basic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/sub_titulo"
                android:text="@string/customer"
                android:layout_marginTop="@dimen/margin_top_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/customer"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/add_customer"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_weight=".1"
                    android:background="@color/colorTrasparente"
                    app:srcCompat="@drawable/ic_add_box" />

            </LinearLayout>

            <TextView
                style="@style/sub_titulo"
                android:text="@string/passengers"
                android:layout_marginTop="@dimen/margin_top_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/passengers"
                android:lines="20"
                android:minLines="3"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/passengers_path"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/photo_passengers"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_weight=".1"
                    android:background="@color/colorTrasparente"
                    app:srcCompat="@drawable/ic_insert_photo" />

            </LinearLayout>

            <TextView
                style="@style/sub_titulo"
                android:text="@string/aircraft"
                android:layout_marginTop="@dimen/margin_top_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/aircraft"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/add_aircraft"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_weight=".1"
                    android:background="@color/colorTrasparente"
                    app:srcCompat="@drawable/ic_add_box" />

            </LinearLayout>

            <TextView
                style="@style/sub_titulo"
                android:text="@string/capitan"
                android:layout_marginTop="@dimen/margin_top_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/capitan"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/add_capitan"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_weight=".1"
                    android:background="@color/colorTrasparente"
                    app:srcCompat="@drawable/ic_add_box" />

            </LinearLayout>

            <TextView
                style="@style/sub_titulo"
                android:text="@string/copilot"
                android:layout_marginTop="@dimen/margin_top_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/copilot"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/add_copilot"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_weight=".1"
                    android:background="@color/colorTrasparente"
                    app:srcCompat="@drawable/ic_add_box" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/cockpi"
                android:text="@string/cockpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/sub_titulo"
                android:text="@string/date"
                android:layout_marginTop="@dimen/margin_top_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/date"
                android:clickable="true"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
